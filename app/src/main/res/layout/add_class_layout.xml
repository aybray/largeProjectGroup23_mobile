<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/web_app_gray"
    tools:context=".AddClassActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/ucf_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:contentDescription="App logo"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bHere @ UCF"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/ucf_bright_gold"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/spacer"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/spacer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView for form -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/create_class_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/add_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="Add a Class"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Input Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Class Name -->
                <EditText
                    android:id="@+id/class_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_fields"
                    android:hint="Class Name"
                    android:inputType="text"
                    android:padding="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_field_gray"
                    android:textSize="18sp" />

                <!-- Class Code -->
                <EditText
                    android:id="@+id/class_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edit_fields"
                    android:hint="Class Code (e.g., COP4331)"
                    android:inputType="text"
                    android:padding="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_field_gray"
                    android:textSize="18sp" />

                <!-- Section -->
                <EditText
                    android:id="@+id/section_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edit_fields"
                    android:hint="Section (e.g., 001)"
                    android:inputType="text"
                    android:padding="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_field_gray"
                    android:textSize="18sp" />

                <!-- Days Offered Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Days Offered:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- Days Checkboxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <CheckBox
                        android:id="@+id/day_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="M"
                        android:textColor="@color/white"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <CheckBox
                        android:id="@+id/day_tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="T"
                        android:textColor="@color/white"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <CheckBox
                        android:id="@+id/day_wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="W"
                        android:textColor="@color/white"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <CheckBox
                        android:id="@+id/day_thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="Th"
                        android:textColor="@color/white"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <CheckBox
                        android:id="@+id/day_friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textColor="@color/white"
                        android:minWidth="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                </LinearLayout>

                <!-- Start Time -->
                <EditText
                    android:id="@+id/start_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edit_fields"
                    android:hint="Start Time (HH:MM)"
                    android:inputType="time"
                    android:padding="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_field_gray"
                    android:textSize="18sp" />

                <!-- End Time -->
                <EditText
                    android:id="@+id/end_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edit_fields"
                    android:hint="End Time (HH:MM)"
                    android:inputType="time"
                    android:padding="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_field_gray"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Create Class Button at Bottom -->
    <Button
        android:id="@+id/create_class_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/ucf_bright_gold"
        android:paddingVertical="16dp"
        android:text="Create Class"
        android:textColor="@color/ucf_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

