<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- BLE hardware requirement -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false"/>

    <!-- Pre-Android 12 (<= API 30) permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Android 12+ Nearby Devices -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" android:usesPermissionFlags="neverForLocation"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BHereUCF">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".EmailVerify"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".EnterCode"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".ResetPassword"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".TeacherClassListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".TeacherClassDetailActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".StudentClassListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".StudentAttendanceActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".StudentAttendanceConfirmationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".StudentAttendanceHistoryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".JoinClassActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".TeacherHistoryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
        <activity
            android:name=".ActiveClassSessionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BHereUCF">
        </activity>
    </application>

</manifest>